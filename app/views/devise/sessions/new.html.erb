<%
=begin%>
 <div class="bgi" style="background-image: url('<%= asset_path  "sign_in.jpg" %>');">
</div> 
<%
=end%>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%
=begin%>
 <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "el-input__inner" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "el-input__inner" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div> 
<%
=end%>

  <sign-in></sign-in>
<% end %>

